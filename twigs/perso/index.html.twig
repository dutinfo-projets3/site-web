{% extends 'template.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/perso.index.css">
{% endblock %}

{% block content %}
    {% if (usertype == 0) %}

        <h3 class="text-center m-0 pb-0 pt-3"> Accueil étudiant </h3>
        <div class="d-flex align-content-center justify-content-around flex-wrap">

            {{ include('perso/card.html.twig', { 'bgcolor': "#3c4a59", 'img': "/assets/img/notes.png", 'text': "Mes notes", "url": "/perso/notes.php"}) }}
            {{ include('perso/card.html.twig', { 'bgcolor': "#455556", 'img': "/assets/img/absences.png", 'text': "Mes absences", "url": "/perso/absences.php"}) }}
            {{ include('perso/card.html.twig', { 'bgcolor': "#404040", 'img': "/assets/img/edt.png", 'text': "Mon emploi du temps", "url": "/perso/edt.php"}) }}

        </div>





    {% elseif (usertype == 1) %}
        <h3 class="text-center m-0 pb-0 pt-3"> Accueil professeur </h3>
        <div class="d-flex align-content-center justify-content-around flex-wrap h-100">
            {{ include('perso/card.html.twig', {'bgcolor': "#3c4a59", 'img': "/assets/img/notes.png", 'text': "Entrer des notes", 'url': "/perso/notemanager.php"}) }}
            {{ include('perso/card.html.twig', {'bgcolor': "#455556", 'img': "/assets/img/absences.png", 'text': "Gestion des absences", 'url': "/perso/absencesmanager.php"}) }}
            {{ include('perso/card.html.twig', {'bgcolor': "#404040", 'img': "/assets/img/edt.png", 'text': "Mon emploi du temps", 'url': "/perso/edt.php"}) }}
        </div>
    {% elseif (usertype == 2) %}
        <h3 class="text-center m-0 pb-0 pt-3">Accueil administration</h3>
        <div class="d-flex align-content-center justify-content-around flex-wrap h-100">
            {{ include('perso/card.html.twig', {'bgcolor': "#3c4a59", 'img': "/assets/img/groupes.png", 'text': "Groupes", 'url': "/perso/groupemanager.php"}) }}
            {{ include('perso/card.html.twig', {'bgcolor': "#455556", 'img': "/assets/img/absences.png", 'text': "Absences", 'url': "/perso/absencesmanager.php"}) }}
            {{ include('perso/card.html.twig', {'bgcolor': "#404040", 'img': "/assets/img/edt.png", 'text': "Cours", 'url': "/perso/coursmanager.php"}) }}
        </div>
        <div class="d-flex align-content-center justify-content-around flex-wrap h-100">
            {{ include('perso/card.html.twig', {'bgcolor': "#707070", 'img': "/assets/img/newspaper.png", 'text': "News", 'url': "/perso/newsmanager.php"}) }}
            {{ include('perso/card.html.twig', {'bgcolor': "#5c6a79", 'img': "/assets/img/notebook.png", 'text': "Gestion des formations", 'url': "/perso/formationmanager.php"}) }}
            {{ include('perso/card.html.twig', {'bgcolor': "#344546", 'img': "/assets/img/ajetud.png", 'text': "Gestion des étudiants", 'url': "/perso/etudiant.php"}) }}
        </div>
    {% else %}
        Une erreur est survenue !
    {% endif %}
{% endblock %}
