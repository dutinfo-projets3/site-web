{% extends 'template.html.twig' %}

{% block content %}

	<div class="row perso m-5">
		<div class="photo rounded-circle img-responsive col-lg-6 col-12 text-center" >
			<img class="rounded-circle" src="/assets/img/users/{{ user.username }}.jpg" style="max-width:200px" alt="photo_user" />
		</div>
		<div id="info" class="col-lg-4 col-12 pt-lg-0 pt-5">
			<div class="mt-2 row"><span class="col-5 d-block"> Nom: </span> <span id="nom" class="text-center col-7 d-block"> {{ user.nom }}</span></div>
			<div class="mt-2 row"><span class="col-5 d-block"> Prénom: </span> <span id="prenom" class="text-center col-7 d-block"> {{ user.prenom }} </span> </div>
			<div class="mt-2 row"><span class="col-5 d-block"> Adresse: </span> <span id="adresse" class="text-center col-7 d-block"> {{ user.adresse }}</span> </div>
			<div class="mt-2 row"><span class="col-5 d-block"> Ville: </span> <span id="ville" class="text-center col-7 d-block"> {{ user.ville }} </span> </div>
			<div class="mt-2 row"><span class="col-5 d-block"> Code postal: </span> <span id="cp" class="text-center col-7 d-block"> {{ user.CP }}</span> </div>
			<div class="mt-2 row"><span class="col-5 d-block"> Numéro: </span> <span id="numero" class="text-center col-7 d-block"> {{ user.numerotel }}</span> </div>
			<div class="mt-2 row"><span class="col-5 d-block"> Email: </span> <span id="mail" class="text-center col-7 d-block"> {{ user.mail }} </span> </div>
			<div class="row mt-2 d-none"><span class="col-5 d-block"> Mot de passe: </span><input class="col-7" type="password" id="inp_mdp" /></div>
			<div class="row mt-2 d-none"><span class="col-5 d-block"> Répéter: </span><input class="col-7" type="password" id="inp_rmdp" /></div>
			<div class="row pt-4">
				<button id="bt_chg_photo" type="button" class="col-6 mr-1 btn btn-dark">Changer de photo</button>
				<button id="bt_chg_infos" type="button" class="col-5 btn btn-dark">Editer les infos</button>
			</div>
		</div>
	</div>

{% endblock %}

{% block lnkjavascript %}
<script src="/assets/js/infoperso.js" type="text/javascript"></script>
{% endblock %}
